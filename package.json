{
  "name": "castor-admin",
  "version": "0.6.1",
  "description": "Administration for Castor instances using the same theme",
  "main": "app.js",
  "bin": {
    "castor-admin": "./bin/admin"
  },
  "scripts": {
    "start": "node ./bin/admin",
    "doc": "bfdocs --base-url='.' ./doc/manifest.json ./public/doc",
    "test": "unset https_proxy && unset http_proxy && mocha",
    "clean-test": "rm -rf instances/test instances/test.json instances/testtesttest instances/testtesttest.json",
    "jshint": "jshint bin/ lib/ routes/ test/ *.js *.json",
    "postinstall": "node ./bin/init"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/castorjs/castor-admin.git"
  },
  "keywords": [
    "castor",
    "admin",
    "management",
    "instances"
  ],
  "author": "Fran√ßois Parmentier <francois.parmentier@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/castorjs/castor-admin/issues"
  },
  "homepage": "https://github.com/castorjs/castor-admin",
  "dependencies": {
    "async": "^0.9.0",
    "connect-flash": "^0.1.1",
    "debug": "^1.0.4",
    "ejs": "^1.0.0",
    "express": "^3.16.8",
    "filesize": "^2.0.3",
    "getport": "^0.1.0",
    "mv": "^2.0.3",
    "sugar": "^1.4.1",
    "xml2js": "^0.4.4"
  },
  "devDependencies": {
    "jshint": "^2.5.5",
    "mocha": "^1.21.4",
    "request": "^2.40.0"
  },
  "peerDependencies": {
    "castor-clean": "*",
    "pm2": "*"
  }
}
