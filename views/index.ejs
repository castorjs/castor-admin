<!-- Create Instance Modal -->
<div id="createModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
  <form id="create-instance-form" action="/instance/" method="post">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="createModalLabel">Create an instance</h3>
  </div>
  <div class="modal-body">

    <div class="row">
      <label for="title" class="span2">Title
      </label>
      <input class="span3" type="text" name="title" id="title" required placeholder="Instance title" />
    </div>
    <div class="row hidden" id="techNameLabel">
      <label for="technicalName" class="span2" title="alphanumeric">Technical name
      </label>
      <input class="span3" type="text" name="technicalName" id="technicalName" disabled required pattern="[a-z_0-9]+" placeholder="lowercase letters and digits" />
    </div>
    <div class="row" id="part1">
      <label for="technicalName_part1" class="span2" title="alphanumeric">Partner/project
      </label>
      <input class="span3" type="text" name="technicalName_part1" id="technicalName_part1" required pattern="[a-z0-9]+" placeholder="lowercase letters and digits" title="Only lower case letters and digits" />
      <div class="validMessage alert alert-error" style="display:none">Only lower case letters and digits</div>
    </div>
    <div class="row" id="part2">
      <label for="technicalName_part2" class="span2" title="alphanumeric">Study</label>
      <input class="span3" type="text" name="technicalName_part2" id="technicalName_part2" required pattern="[a-z0-9]+" placeholder="lowercase letters and digits" title="Only lower case letters and digits" />
      <div class="validMessage alert alert-error" style="display:none">Only lower case letters and digits</div>
    </div>
    <div class="row" id="part3">
      <label for="technicalName_part3" class="span2" title="alphanumeric">Version</label>
      <input class="span3" type="text" name="technicalName_part3" id="technicalName_part3" required pattern="[0-9]+" placeholder="digits" title="Only digits" />
      <div class="validMessage alert alert-error" style="display:none">Only digits</div>
    </div>
    <div class="row hidden" id="url">
      <label for="accel" class="span2" title="Instance's external URL">
        external URL</label>
      <input class="span3" type="url" name="accel" id="accel"
        placeholder="http://instance.domain.co/" />
    </div>
    <div class="row hidden" id="internal_url">
      <label for="url_root" class="span2" title="Instance's internal URL (computed)">
       internal URL
      </label>
      <input class="span3" type="url" name="url_root" id="url_root"
        placeholder="http://castor.intra.domain.co:35268/" />
    </div>
    <div class="row hidden" id="date">
      <label for="date_input" class="span2" title="Instance's creation date">
        Date
      </label>
      <input class="span3" type="text" name="date" id="date_input" disabled/>
    </div>
    <div class="row">
      <label class="span5" for="tblAppendGrid">
        You automatically become administrator for this instance.
      </label>
      <table class="span5" id="tblAppendGrid">
      </table>
    </div>
  </div>
  <div class="modal-footer">
    <button id="cancel-form" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <button id="create-submit-button" type="submit" class="btn btn-primary" disabled>Create</button>
  </div>
  </form>
</div>


